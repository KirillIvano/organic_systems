{% macro testimonial(
    author_name,
    person_info,
    text
) %}
<div class="testimonial">
    <div class="testimonial__content">
        <p class="testimonial__text">
            {{text}}
        </p>

        <p class="testimonial__author-info">
            {{author_name}}
        </p>
        
        <p class="testimonial__company-info">
            {{person_info}}
        </p>
    </div>
</div>
{% endmacro %}